import math

def area_circle(radius):
    return math.pi * radius ** 2

def area_rectangle(length, width):
    return length * width

def area_triangle(base, height):
    return 0.5 * base * height

# Example usage:
radius = 5
print(f"Area of a circle with radius {radius} is {area_circle(radius):.2f}")

length = 10
width = 5
print(f"Area of a rectangle with length {length} and width {width} is {area_rectangle(length, width)}")

base = 6
height = 4
print(f"Area of a triangle with base {base} and height {height} is {area_triangle(base, height)}")
